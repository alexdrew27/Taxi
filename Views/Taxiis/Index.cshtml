@model IEnumerable<Taxi.Models.Taxii>

@{
    ViewData["Title"] = "Index";
}

<style>
    table, th, td {
        border: 1px solid white;
        margin-left: -90px;
    }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="color: wheat">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaxiiId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaxiiId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaxiiId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
